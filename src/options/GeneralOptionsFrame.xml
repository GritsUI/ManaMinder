<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
    ..\..\..\FrameXML\UI.xsd">

    <Frame name="ManaMinder_Options_General" parent="ManaMinder_Options" hidden="false" id="1">
        <Size>
            <AbsDimension x="410" y="250"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="ManaMinder_Options" relativePoint="TOPLEFT">
                <Offset>
                    <AbsDimension x="16" y="-28"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Frames>

            <CheckButton name="ManaMinder_Options_General_Hide_Check" inherits="OptionsCheckButtonTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="0" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        ManaMinder.options.general:OnHideLoad()
                    </OnLoad>
                    <OnClick>
                        ManaMinder.options.general:OnHideChange(this:GetChecked())
                    </OnClick>
                </Scripts>
            </CheckButton>

            <CheckButton name="ManaMinder_Options_General_Lock_Check" inherits="OptionsCheckButtonTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ManaMinder_Options_General_Hide_Check" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="0" y="5"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                            ManaMinder.options.general:OnLockLoad()
                    </OnLoad>
                    <OnClick>
                            ManaMinder.options.general:OnLockChange(this:GetChecked())
                    </OnClick>
                </Scripts>
            </CheckButton>

        </Frames>
    </Frame>

</Ui>
